<h1>商品一覧画面</h1>

	<h3>検索結果の検索結果</h3>

		<% @cds.each do |cd| %>

		  <div>

			<div>
			<p>CDジャケット画像</p>
			<%= attachment_image_tag cd,:cd_image %>
				</div>

				<div>
				<h4>CDタイトル：<%= cd.cd_title %></h4>

				<h4>アーティスト名：<% cd.discs.each do |disc| %>
					 <% disc.musics.each do |music| %>
					  <% music.recording_artists.each do |recording_artist| %>
					  	<%= recording_artist.artist.artist_name %></h4>
				      <% end %>
					 <% end %>
					<% end %>
				<h4>ジャンル名：<%= cd.cd_genre %></h4>
				<h4>価格：<%= cd.cd_price %></h4>
				<h4>在庫：<%= cd.cd_stock %></h4>
				</div>
		</div>
		<% end %>
			<%= paginate @cds, class: "pagenate" %>