<div class="container" style="margin-top: 250px;  background-color: rgba(0,0,0,0.7);">

  <div class="row" style="color: white;">
    <div class="col-lg-1"></div>
    <div class="col-lg-10 media" >
      <div class="media-left" >
        <%= attachment_image_tag @event, :event_image, format: 'jpeg', fallback: "/images/no_image.jpg" ,size: "150x150" %>
      </div>
      <div class="media-body"  style="color: white;">
        <h1 style="color: white; padding-top: 90px;  "><%= @event.event_title %> <%= @event.event_day%>


          <% if user_signed_in? %>
          <% if @event.favorited_by?(current_user) %>
              <%= link_to event_asiatos_path(@event), method: :delete, style: "color: white;" do %>
                <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
                <%= @event.asiatos.count %> いいね
              <% end %>
        <% else %>
            <%= link_to event_asiatos_path(@event), method: :post, style: "color: white;" do %>
              <i class="fa fa-heart-o" aria-hidden="true"></i>
              <%= @event.asiatos.count  %> いいね
            <% end %>
         <% end %>
         <% end %>
       </h1>
     </div>
    </div>
    <div class="col-lg-1"></div>
  </div>

  <div class="row">

    <div class="col-lg-8" style="color:white;">
      <h1 style="color: white;">出演アーティスト一覧</h1>
      <ol type="1">
      <% @event.performers.each do |f| %>

        <li style="font-size: 30px;">
          <div style="color: white;">
            <%= link_to  controller: 'cds', action: 'search',id: f.artist.id  do %>
                <%= f.artist.artist_name %>
            <% end %>
          </div>

        </li>
  	<% end %>
    </ol>
    </div>

    <div class="col-lg-4">
      <% if user_signed_in? && current_user.admin? %>
      <div class="row">
        <div class="col-lg-6">
          <%= link_to "編集", edit_event_path%>
        </div>
        <div class="col-lg-6">
          <%=link_to "削除", event_path(@event), method: :delete, "data-confirm" => "本当に削除しますか？", method: :delete %>
        </div>
      </div>
      <% end %>
      <div class="row">
        <div class="col-12">
          <h5>アクセス情報</h5>
          <h5>住所</h5>
          <%= @event.event_address %>
          <style type="text/css">
            #map { height: 300px;
                   margin-left:auto;
                   margin-right:auto;
                   text-align:left;
                  }
          </style>


          <div id="map"></div>
        </div>
      </div>
    </div>

  </div>
  <% if user_signed_in?  %>
  <div class="row">
      <%= form_for [@event, @comment] do |f| %>
      <div class="col-lg-8" style="border: 1px solid red">
        <h1>コメント記入</h1>

          <%= f.text_field :favorite_artist, class: "form-control",placeholder: "アーティスト" %>
          <%= f.text_field :comment, class: "form-control",placeholder: "コメントをここに" %>
          <%= f.submit "送信する", class: "btn btn-lg btn-base-1 mt-20 pull-right" %>
        </div>
      <% end %>
<% end %>
  </div>

  <div class="row">
  <div class="col-lg-1"></div>
  <div class="col-lg-10" style="border: 1px solid blue;">
    <h1>コメント一覧</h1>
    <div style="overflow: auto; height: 200px;">


    <% @event.comments.each do |f| %>

			<div class="media">
				<div class="media-left">
					<%= link_to user_path(f.id) do %>
						<%= attachment_image_tag  @user, :user_image, :fill, 60, 60, format: 'jpeg', fallback: "/images/no_image.jpg" %>
					<% end %>
				</div>
				<div class="media-body">
					<%= f.favorite_artist %>
					<%= f.comment %>
				</div>
			</div>

		<% end %>
   </div>
  </div>
  <div class="col-lg-1"></div>
</div>








<script type="text/javascript">
    function initMap() {

        var test ={lat: <%= @event.latitude %>, lng: <%= @event.longitude %>};
        var map = new google.maps.Map(document.getElementById('map'), {
            zoom: 15,
            center: test
        });
        var transitLayer = new google.maps.TransitLayer();
        transitLayer.setMap(map);

        var contentString = '住所：<%= @event.event_address %>';
        var infowindow = new google.maps.InfoWindow({
            content: contentString
        });

        var marker = new google.maps.Marker({
            position:test,
            map: map,
            title: contentString
        });

        marker.addListener('click', function() {
            infowindow.open(map, marker);
        });
    }
</script>

<script async defer
  src="https://maps.googleapis.com/maps/api/js?v=3.exp&key=AIzaSyCOR-1QVl7mxC-zGHcwDBuEFAXfK3Hy5Pc&callback=initMap">
</script>
