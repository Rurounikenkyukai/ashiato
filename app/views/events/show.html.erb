<div class="container" style="margin-top: 200px;">

  <div class="row" style="border: 1px solid red">
    <div class="col-lg-2">
      <%= attachment_image_tag @event, :event_image, :fill, 100, 100, format: 'jpeg', fallback: "/images/no_image.jpg" %>
    </div>
    <div class="col-lg-6">
     <%= @event.event_title %>
    </div>
    <div class="col-lg-4">
     <div class="row">
       <div class="col-lg-12">
         <% if user_signed_in? %>
         <% if @event.favorited_by?(current_user) %>
           <div>
             <%= link_to event_asiatos_path(@event), method: :delete do %>
               <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
               <%= @event.asiatos.count %> いいね
             <% end %>
         </div>
       <% else %>
         <div>
           <%= link_to event_asiatos_path(@event), method: :post do %>
             <i class="fa fa-heart-o" aria-hidden="true"></i>
             <%= @event.asiatos.count %> いいね
           <% end %>
         </div>
        <% end %>
        <% end %>
       </div>
     </div>
     <div class="row">
       <div class="col-lg-12">
         <%= @event.event_day%>
       </div>
     </div>
    </div>
  </div>

  <div class="row">

    <div class="col-lg-8" style="border: 1px solid blue;">
      <h1>出演アーティスト一覧</h1>
      <% @event.performers.each do |f| %>
  			<div>

  				<div>
  					<h3><%= f.artist.artist_name %></h3>

  				</div>
  			</div>

  	<% end %>
    </div>

    <%= form_with(model: map, local: true) do |form| %>
  <% if map.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(map.errors.count, "error") %> prohibited this map from being saved:</h2>

      <ul>
      <% map.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :address %>
    <%= form.text_field :address %>
  </div>

  <div class="field">
    <%= form.label :longitude %>
    <%= form.text_field :longitude %>
  </div>

  <div class="field">
    <%= form.label :latitude %>
    <%= form.text_field :latitude %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>


    <div class="col-lg-4">
      <% if user_signed_in? && current_user.admin? %>
      <div class="row">
        <div class="col-lg-6">
          <%= link_to "編集", edit_event_path%>
        </div>
        <div class="col-lg-6">
          <%=link_to "削除", event_path(@event), method: :delete, "data-confirm" => "本当に削除しますか？", method: :delete %>
        </div>
      </div>
      <% end %>
      <div class="row">
        <div class="col-12">
          <h5>アクセス情報</h5>
          <h5>住所</h5>
          <%= @event.event_address %>
          <style type="text/css">
            #map { height: 30px;
                   margin-left:auto;
                   margin-right:auto;
                   text-align:left;
                  }
          </style>


          <div id="map"></div>
        </div>
      </div>
    </div>

  </div>
  <% if user_signed_in?  %>
  <div class="row">
      <%= form_for [@event, @comment] do |f| %>
      <div class="col-lg-8" style="border: 1px solid red">
        <h1>コメント記入</h1>

          <%= f.text_field :favorite_artist, class: "form-control",placeholder: "アーティスト" %>
          <%= f.text_field :comment, class: "form-control",placeholder: "コメントをここに" %>
          <%= f.submit "送信する", class: "btn btn-lg btn-base-1 mt-20 pull-right" %>
        </div>
      <% end %>
<% end %>
  </div>

  <div class="row">
  <div class="col-12" style="border: 1px solid blue;">
    <h1>コメント一覧</h1>
    <% @users.each do |f| %>
     <% f.comments.each do |i| %>
			<div>
				<div>
					<p>イベント画像</p>
					<%= link_to user_path(f.id) do %>
						<%= attachment_image_tag  @user, :user_image, :fill, 60, 60, format: 'jpeg', fallback: "/images/no_image.jpg" %>
					<% end %>
				</div>
				<div>
					<h3><%= i.favorite_artist %></h3>
					<h4><%= i.comment %></h4>
				</div>
			</div>
      <% end %>
		<% end %>
		<%= paginate @users %>

    </div>
  </div>
</div>

<script type="text/javascript">
    function initMap() {

        var test ={lat: <%#= @map.latitude %>, lng: <%#= @map.longitude %>};
        var map = new google.maps.Map(document.getElementById('map'), {
            zoom: 15,
            center: test
        });
        var transitLayer = new google.maps.TransitLayer();
        transitLayer.setMap(map);

        var contentString = '住所：<%#= @map.address %>';
        var infowindow = new google.maps.InfoWindow({
            content: contentString
        });

        var marker = new google.maps.Marker({
            position:test,
            map: map,
            title: contentString
        });

        marker.addListener('click', function() {
            infowindow.open(map, marker);
        });
    }
</script>

<script async defer
  src="https://maps.googleapis.com/maps/api/js?v=3.exp&key=[ここに取得したAPIkeyを入力]&callback=initMap">
</script>
