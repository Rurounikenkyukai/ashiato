<div class="container" style="margin-top: 200px;">
  <div class="row">
    <div class="col-lg-4" style="border: 1px solid red;">
     <%= attachment_image_tag current_user, :user_image, :fill, 100, 100, format: 'jpeg', fallback: "/images/no_image.jpg" %>
     <br />
     <%= @user.nick_name %>
     <br />
     <%= link_to "ユーザ編集画面", edit_user_path %>
     <br />
     <%=link_to "退会", user_path(@user), method: :delete, "data-confirm" => "本当に退会しますか？", method: :delete %>
   </div>
    <div class="col-lg-8" style="border: 1px solid blue;">
      <div>
        <h1>行ったイベント</h1>
        <h2>Books</h2>
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
    <% @user.asiatos.each do |f| %>

      <tr>
         <th>
          <%= link_to event_path(f.id) do %>
         <%= attachment_image_tag f.event, :event_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %>
         <% end %>
         </th>
         <th>
         <%= link_to event_path(f.event.id) do %>
         <%= f.event.event_title %>
         <% end %>
         </th>
         <th><%= f.event.event_title%></th>
      </tr>

    <% end %>
    </tbody>
  </table>
      </div>
    <h2>購入履歴</h2>

    </div>
  </div>
</div>
