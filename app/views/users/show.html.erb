<div class="container" style="margin-top: 250px; background-color: rgba(0,0,0,0.7);">


  <div class="row">
    <div class="col-lg-4" >
     <%= attachment_image_tag @user, :user_image, :fill, 200, 200, format: 'jpeg', fallback: "/images/no_image.jpg" %>
     <br />
       <h1 style="background-color: rgba(255,255,255,1); border-radius: 20px; text-align:center;"><%= @user.nick_name %></h1>

     <%= link_to "ユーザ編集", edit_user_path,class: "btn btn-primary" ,style: "color: black; width: 100%;" %>
     <br />
     <%=link_to "退会", user_path(@user), method: :delete, "data-confirm" => "本当に退会しますか？", method: :delete, class: "btn btn-danger",style: "width:90px; margin-top: 10px;" %>
   </div>


    <div class="col-lg-8" style="color:white;">


        <h1>行ったイベント</h1>

        <div style=" overflow: scroll; height: 200px;">
          <% @user.asiatos.each do |f| %>
            <div class="mdia" style="margin-top: 10px;">
              <%= link_to   event_path(f.id), class:"media-left" do %>
                <%= attachment_image_tag f.event, :event_image,  format: 'jpeg', fallback: "/images/no_image.jpg", size: "95x95" %>
              <% end %>
              <div class="media-body">
                <div class="panel panel-default">
                  <%= link_to event_path(f.event.id), style: "color:black;" do %>
                    <%= f.event.event_title %>
                  <% end %>
                </div>
              </div>

            </div>
          <% end %>
        </div>





          <div class="media-body">
            <div class="panel panel-default">
              <div class="panel-heading">
                 好きなアーティスト：<%#= f.favorite_artist %>
              </div>
              <div class="panel-body">
                 コメント：<%#= f.comment %>
              </div>
              </div>


          </div>
        </div>


    <h2>購入履歴</h2>

    <div style=" overflow: scroll; height: 200px;">
    <% @user.purchase_historys.each do |f| %>
            <% f.purchase_items.each do |a| %>
              <div class="media " style="width:800px; ">
            <div class="media-left media-image" >
            <%= attachment_image_tag event, :event_image, format: 'jpeg',fallback: "/images/no_image.jpg", size: "220x220" %>
            </div>
            <%= a.purchase_cd_title %>
            <%= attachment_image_tag  a, :purchase_cd_image,  format: 'jpeg', fallback: "/images/no_image.jpg", size: "95x95" %>


            <% end %>
        </div>

    <% end %>
</div>


    </div>
  </div>
</div>
