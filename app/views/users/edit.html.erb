<div class="container" style="margin-top: 200px;">
  <div class="row">
    <div class="col-lg-12">
      <%= form_for(@user) do |f| %>
        <div class="field">
          <%= f.label :first_name %>
          <%= f.text_field :first_name %>
        </div>
        <div class="field">
          <%= f.label :last_name %>
          <%= f.text_field :last_name %>
        </div>
        <div class="field">
          <%= f.label :kana_first_name %>
          <%= f.text_field :kana_first_name %>
        </div>
        <div class="field">
          <%= f.label :kana_last_name %>
          <%= f.text_field :kana_last_name%>
        </div>
        <div class="field">
          <%= f.label :nick_name %>
          <%= f.text_field :nick_name%>
        </div>
        <div class="field">
          <%= f.label :image, class: "user_image" %>
          <%= f.attachment_field :user_image , class: "user_image"%>
        </div>
        <div class="field">
          <%= f.label :postal_code %><br />
          <%= f.text_field :postal_code, autofocus: true, autocomplete: "郵便番号" %>
        </div>

        <div class="field">
          <%= f.label :address %><br />
          <%= f.text_field :address, autofocus: true, autocomplete: "住所" %>
        </div>

        <div class="field">
          <%= f.label :phone_number %><br />
          <%= f.text_field :phone_number, autofocus: true, autocomplete: "電話番号" %>
        </div>

        <div class="actions">
          <%= f.submit '更新する' %>
        </div>
      <% end %>
      <%= link_to "戻る", user_path %>
    </div>
  </div>
</div>
