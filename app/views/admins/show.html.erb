<div class="container">
	<div class="row">
		<div class="col-lg-2">
			<div class="sidemenu">
			    <p></p>
			    <p>CD追加</p>
			    <p>イベント追加</p>
			    <p>ユーザー情報</p>
			    <p>購入履歴</p>
			    <p>CD在庫管理</p>
			    <p>アクセス解析</p>
		    </div>
		</div>
		<div class="col-lg-8" style="background-color: gray;">
			<h2>CD追加</h2>
			<%= nested_form_for @cd do |f| %>
			    <p><%= f.label :CD %>
			   	  <%= f.text_field :cd_title %></p>
			    <p><%= f.label :ジャンル %>
			   	  <%= f.select :cd_genre, @genres, :include_blank => true %>
			   	  <%= f.text_field :cd_genre %></p>
                <p><%= f.label :レーベル名 %>
			      <%= f.select :cd_label, @labels, :include_blank => true %>
			      <%= f.text_field :cd_label %></p>
			    <p><%= f.label :値段 %>
			      <%= f.text_field :cd_price %>円</p>
			    <p><%= f.label :在庫数 %>
			      <%= f.number_field :cd_stock %>枚</p>
			    <p><%= f.label :ジャケット画像 %>
			      <%= f.attachment_field :cd_image, placeholder: "ジャケット画像を検索" %></p>
			    <p><%= fields_for @artist do |i| %>
			    　  <%= i.label :新規アーティスト追加 %>
		         　 <%= i.text_field :artist_name %>
		            <%= i.submit "アーティスト追加" %></p>
	            <% end %>
		          <%= f.add_nested_fields_link :discs, 'Disc追加', class: 'btn btn-primary', role: 'button' %>
		            <%= f.nested_fields_for :discs, wrapper_tag: :div do |d| %>
                       <p><%= d.label :Disc, class: 'form-control' %>
                         <%= d.number_field :disc_number, class: 'form-control' %></p>                         
                         <%= d.remove_nested_fields_link 'Delete', class: 'btn btn-danger', role: 'button' %>
                    <% end %>                
            <%= f.submit %>    
            <% end %>

            <h2>イベント追加</h2>




            
                


		</div>

		<div class="col-lg-2">
		</div>
	</div>
</div>