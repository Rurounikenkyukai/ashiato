<div style="margin-top:200px; color: white;">
  <%= devise_error_messages! %>
</div>


<div class="clearfix" style="text-align: center;   margin-top: 150px;">




<h2 style="color: white">新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>




  <div class="log_in  field  clearfix" style="padding: 0 34%;"  >
   <ul>
     <li>
       <%= f.label :姓 ,style: "color: white;" %><br />
       <%= f.text_field :first_name, autofocus: true, autocomplete: "(姓)" %>

     </li>
     <li>
       <%= f.label :名 , style: "color: white;" %><br />
       <%= f.text_field :last_name, autofocus: true, autocomplete: "(名)" %>

     </li>
   </ul>

 </div>




  <div class="log_in field  clearfix" style="padding: 0 34%;;" >
   <ul>
     <li>
       <%= f.label :"カナ(姓)",style: "color: white;"  %><br />
       <%= f.text_field :kana_first_name, autofocus: true, autocomplete: "(カナ姓)" %><br />
     </li>
     <li>
       <%= f.label :"カナ(名)",style: "color: white;"  %><br />
       <%= f.text_field :kana_last_name, autofocus: true, autocomplete: "(カナ名)" %>
     </li>
   </ul>




  </div>

  <div class="field">
    <%= f.label :ニックネーム,style: "color: white;"  %><br />
    <%= f.text_field :nick_name, autofocus: true, autocomplete: "ニックネーム" %>
  </div>



  <div class="field">
    <%= f.label :郵便番号,style: "color: white;"  %><br />
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "郵便番号" %>
  </div>

  <div class="field">
    <%= f.label :住所,style: "color: white;"  %><br />
    <%= f.text_field :address, autofocus: true, autocomplete: "住所" %>
  </div>

  <div class="field">
    <%= f.label :電話番号,style: "color: white;"  %><br />
    <%= f.text_field :phone_number, autofocus: true, autocomplete: "電話番号" %>
  </div>

  <div class="field">
    <%= f.label :email,style: "color: white;"  %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password,style: "color: white;"  %>
    <% if @minimum_password_length %>
    <em style="color: white;">(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation ,style: "color: white;" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions" style="margin-top: 25px; ">
    <%= f.submit "登録", class: "btn btn-default" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>
