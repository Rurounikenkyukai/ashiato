<div style="margin-top:200px; color: white;">
  <%= devise_error_messages! %>
</div>


<div class="clearfix" style="text-align: center;  color: white; margin-top: 150px;">




<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>




  <div class="field  clearfix" style="padding-left: 500px;"  >
   <ul>
     <li>
       <%= f.label :姓 %><br />
       <%= f.text_field :first_name, autofocus: true, autocomplete: "(姓)" %>

     </li>
     <li>
       <%= f.label :名 %><br />
       <%= f.text_field :last_name, autofocus: true, autocomplete: "(名)" %>

     </li>
   </ul>

 </div>




  <div class="field  clearfix" style="padding-left: 500px;" >
   <ul>
     <li>
       <%= f.label :"カナ(姓)" %><br />
       <%= f.text_field :kana_first_name, autofocus: true, autocomplete: "(カナ姓)" %><br />
     </li>
     <li>
       <%= f.label :"カナ(名)" %><br />
       <%= f.text_field :kana_last_name, autofocus: true, autocomplete: "(カナ名)" %>
     </li>
   </ul>




  </div>

  <div class="field">
    <%= f.label :ニックネーム %><br />
    <%= f.text_field :nick_name, autofocus: true, autocomplete: "ニックネーム" %>
  </div>



  <div class="field">
    <%= f.label :郵便番号 %><br />
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "郵便番号" %>
  </div>

  <div class="field">
    <%= f.label :住所 %><br />
    <%= f.text_field :address, autofocus: true, autocomplete: "住所" %>
  </div>

  <div class="field">
    <%= f.label :電話番号 %><br />
    <%= f.text_field :phone_number, autofocus: true, autocomplete: "電話番号" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions" style="margin-top: 25px; ">
    <%= f.submit "Sign up", class: "btn btn-default" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>
